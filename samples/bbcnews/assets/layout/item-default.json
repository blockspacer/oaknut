{
	"format": ["bbc.mobile.news.format.textual"],
	"class": "BNVerticalStack",
	"background": "#fff",
    "modules": [
		{"$":"itemPrimaryMedia", "modes":["portrait"]},
		{"$":"itemHeadline"},
		{"$":"itemByline"},
		{"$":"itemTopics"},
		{"$":"itemBody"},
		{
          "titleStyle":"relatedStories",
          "cellClass":"BNCellItemRelatedStory",
          "limit":4,
          "secondary":["bbc.mobile.news.group.see-alsos"],
          "maxTopics":1,
          "imageWidth":0.5
        },
        {
          "titleStyle":"relatedTopicsHeader",
          "cellClass":"BNCellRelatedTopic",
          "primary":["bbc.mobile.news.collection"],
          "secondary":["bbc.mobile.news.home_section","bbc.mobile.news.topic"],
        }
    ]
}
