{
	"format": [".format.audio",".format.video"],
	"modes": ["portrait"],
	"class": "BNVerticalStack",
	"background": "contentBackgroundInv",
    "modules": [
		{"$":"itemPrimaryMedia", "hideCaption":true, "autoplay":true},
        {
            "cellClass":"BNCellHeadline"
        },
        {
            "cellClass":"BNCellByline",
            "primary":[".person"],
            "secondary":[".byline"],
            "limit":1
        },
        {
            "cellClass":"BNCellTopics"
        },
        {
            "class":"BNCellsModuleArticleBody",
        },
        {
          "title": { "style":"relatedTitle", "text": "Related video and audio"},
          "cellClass":"BNCellItemRelatedStory",
          "limit":-1,
          "format":[".format.audio",".format.video"],
          "primary":[".item"]
        },
        {
          "title": { "style":"relatedTitle", "text": "Related Stories"},
          "cellClass":"BNCellItemRelatedStory",
          "limit":4,
          "secondary":[".group.see-alsos"],
          "maxTopics":1,
          "imageWidth":0.5
        },
        {
          "title": { "style":"relatedTitle", "text": "Related Topics"},
          "cellClass":"BNCellRelatedTopic",
          "primary":[".collection"],
          "secondary":[".home_section",".topic"],
        }
	]
}
